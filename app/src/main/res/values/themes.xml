<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.SneakerApp_Group4" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey</item>

        <!-- Customize other theme attributes here as needed -->
    </style>

    <!-- Optional: Custom styles for other components -->
    <style name="CustomTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.SneakerApp_Group4" parent="Base.Theme.SneakerApp_Group4" >
        <item name="android:windowTranslucentNavigation">true </item>
    </style>
</resources>
